def is_prime(n):
    if n%2==0 :
        return False
    for i in range(2, int(np.sqrt(n)) +1):
        if n%i==0:
            return False
    return True

def prime_rows(array):
    result = []
    for row in array:
        for num in row:
            if is_prime(num) == True:
                result.append(row)
                break
    return np.array(result)
    


print(prime_rows(arr))


